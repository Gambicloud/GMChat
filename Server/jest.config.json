{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["**/**/*.spec.ts"],
  "moduleFileExtensions": ["ts","js", "json", "node"],
  "setupFiles": ["./setuptest.js"],

  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },

  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },

  "testTimeout": 10000
}